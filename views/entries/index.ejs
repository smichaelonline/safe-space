<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/entries/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1 id="community-line" class="animate__animated animate__fadeInDown">Your Community</h1>
  <img id="hand-sun" src="/assets/hands-with-sun.png" alt="Hand reaching out to sun">
  <% entries.forEach(entry => { %>
    <div id="entryDate"><%= entry.date.toString().slice(0,15)%></div>
    <div id="entryDate"><%= entry.date.toString().slice(15,24)%></div>
    <img src="<%= entry.authorId.avatar %>" class="avatar"/>
    <p><%= entry.authorId.name %></p>
    <div id="entryText"><%= entry.text%></div>
    <div id="details-button">
      <a href="/entries/<%= entry._id %>" id="Details">
        <button><span class="text">Details</span>
          <span class="blob"></span>
          <span class="blob"></span>
          <span class="blob"></span>
          <span class="blob"></span>
        </button>
        </a>
    </div>
  <% }) %>
</main>

<%- include('../partials/footer') %>