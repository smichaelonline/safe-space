<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/entries/show.css"
<%- include('../partials/nav') %>

<main>
  <div id="author-info">
    <h1><%= entry.title%></h1>
    <h4><%= entry.authorId.name %></h4>
    <h5><%= entry.date.toString().slice(0,15)%></h5>
    <h6><%= entry.date.toString().slice(15,24)%></h6>
    <div><%= entry.text %></div>
  </div>
  <% if (user.profile._id.equals(entry.authorId._id)) { %>
  <div id="form-div">
    <div>
      <form action="/entries/<%= entry._id %>/edit">
        <div type="submit" id="edit-button">
          <button><span class="text">Edit</span>
            <span class="blob3"></span>
            <span class="blob3"></span>
            <span class="blob3"></span>
            <span class="blob3"></span>
          </button>
        </div>
      </form>
    </div>
    <div>
      <form action="/entries/<%= entry._id %>?_method=DELETE" method="POST">
        <div id="delete-button">
          <button type="submit"><span class="text">Delete</span>
            <span class="blob2"></span>
            <span class="blob2"></span>
            <span class="blob2"></span>
            <span class="blob2"></span>
          </button>
        </div>
      </form>
    </div>
  </div>
<% } %>
  <div>
    <form action="/entries/<%= entry._id %>/comments" method="POST"> 
      <textarea rows="10" cols="15" name="text" placeholder="Share kind words..." required></textarea>
      <div id="post-button">
        <button><span class="text">Post</span>
          <span class="blob"></span>
          <span class="blob"></span>
          <span class="blob"></span>
          <span class="blob"></span>
        </button>
      </div>
    </form>
    <div id="comment-count">
      <i class="fa-regular fa-comments"></i>
      <p><%= entry.comments.length %></p>
    </div>
  </div>
  <h4 id="support-header">Your Support System:</h4>
  <div id="comments">
    <ul id="comment-list">
      <% entry.comments.forEach(comment => { %> 
        <li>
          <img src="<%= comment.authorId.avatar %>" class="avatar"/>
          <ul id="single-comment">
            <li><%= comment.authorId.name %></li>
            <li><%= entry.date.toString().slice(0,15)%></li>
            <li><%= entry.date.toString().slice(15,24)%></li>
            <li><%= comment.text %></li>
        </ul>
          <% if (user.profile._id.equals(comment.authorId._id)) { %>
          <form action="/entries/<%= entry._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
            <a type="submit" id="delete-comment-icon"><i class="fa-solid fa-trash-can"></i></a>
          </form>
        </li>
        <% } %>
      <% }) %>  
    </ul>
  </div>
</main>

<%- include('../partials/footer') %>